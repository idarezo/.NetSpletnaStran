@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model UserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <form method="post" asp-controller="Profil" asp-action="show">

                <div class="card">
                        <div class="card-body customisedDivs">
                        <h5 class="card-title text-center">@Localizer["User"]</h5>

                        <div class="form-group">
                                <label for="inputName">@Localizer["Ime"]:</label>
                            <input type="text" class="form-control" id="inputName" value="@Model.ime" readonly>
                        </div>

                        <div class="form-group">
                                <label for="inputPassword">@Localizer["Geslo"]:</label>
                            <input type="text" class="form-control" id="inputPassword" value="@Model.priimek" readonly>
                        </div>
                        <div class="form-group">
                                <label for="inputEmail">@Localizer["Email"]:</label>
                            <input type="email" class="form-control" id="inputEmail" value="@Model.Email" readonly>
                        </div>
                        <div class="form-group">
                                <label for="inputNormalizedEmail">@Localizer["EmailNor"]:</label>
                            <input type="text" class="form-control" id="inputNormalizedEmail" value="@Model.NormalizedEmail" readonly>
                        </div>

                            <div class="text-center">
                                  <input type="submit" value="@Localizer["change"]" class="btn btn-primary" />

                            </div>

                        
                    </div>
                </div>
                </form>

            </div>
        </div>
    </div>

    


</body>
</html>
